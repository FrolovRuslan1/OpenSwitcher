#!/bin/bash
my_dir="$(dirname "$0")"
source "$my_dir/../include/header.sh"

add_standart_combination() 
{
    if [ "$1" -eq 1 ]; then
        if ! grep -q "$defaultCombination" "$file"; then
			echo "Установка стандартной комбинации клавиш для запуска."
			echo "$defaultCombination" >> "$HOME_USER/.xbindkeysrc"
			echo "Установите необходимую вам конфигурацию запуска"
        else
            echo "Стандартная комбинация клавиш найдена"
        fi
    else
		echo "Установка стандартного файла $file"
		xbindkeys --defaults > "$file"
		echo "Установка стандартной комбинации клавиш для запуска."
		echo "$defaultCombination" >> "$HOME_USER/.xbindkeysrc"
		echo "Установите необходимую вам конфигурацию запуска"
    fi
    
}

add_standart_autostart()
{   
    if [ "$1" -eq 1 ]; then
        if ! grep -q "$default_autostart_xbindkeys" "$file"; then
			echo "Установка стандартного автостарта."
			echo "$default_autostart_xbindkeys" >> "$HOME_USER"/.xinitrc
        else
            echo "Стандартный автостарт найден"
        fi
    else
		echo "Копирование стандартного /etc/X11/xinit/xinitrc в $HOME_USER/.xinitrc."
		cp /etc/X11/xinit/xinitrc "$HOME_USER"/.xinitrc
		echo "Установка стандартного автостарта."
		echo "$default_autostart_xbindkeys" >> "$HOME_USER"/.xinitrc
    fi
    
}

# Check requested files
for file in "${required_files[@]}"; do
    if [ ! -f "$file" ]; then
        echo "Файл $file не найден."

        if [ "$file" = "$HOME_USER/.xbindkeysrc" ]; then
            add_standart_combination 0
        elif [ "$file" = "$HOME_USER/.xinitrc" ]; then
            add_standart_autostart 0
        fi
    else
        echo "Файл $file найден."

        if [ "$file" = "$HOME_USER/.xbindkeysrc" ]; then
            add_standart_combination 1
        elif [ "$file" = "$HOME_USER/.xinitrc" ]; then
            add_standart_autostart 1
        fi
       
    fi
done

echo "Проверка завершена."